@model List<CEDASistema.Models.TableViewModels.CursoTableViewModel>


@{
    ViewBag.Title = "Index";
}

<h2>Cursos</h2>

<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/Curso/AddCurso")'" value="Crear Curso " />
    </div>
</div>
<br />


<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered">
            <tr>
                <th>ID Curso:</th>
                <th>Nombre Curso:</th>
                <th>ID Modalidad:</th>
                <th>ID Sede:</th>
                <th>ID Estado:</th>
                <th>ID Programa:</th>
            </tr>

            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@oElemento.idCurso</td>
                    <td>@oElemento.nameCurso</td>
                    <td>@oElemento.idModalidad</td>
                    <td>@oElemento.idSede</td>
                    <td>@oElemento.idEstado</td>
                    <td>@oElemento.idPrograma</td>
                </tr>

            }
        </table>

    </div>

</div>

